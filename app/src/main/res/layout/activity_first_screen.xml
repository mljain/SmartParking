<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_parking"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="smartparking.smartparking.FirstScreen">






    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/releaseParking"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/releaseParking"
        android:src="@drawable/projecttag" />

    <ImageButton
        android:id="@+id/findParkingImageButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxHeight="176dp"
        android:maxWidth="176dp"
        android:minHeight="176dp"
        android:minWidth="176dp"
        android:src="@drawable/parkpin"
        android:layout_below="@+id/imageView2"
        android:layout_alignParentEnd="true" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Payment"
        android:id="@+id/paymentButton"
        android:layout_below="@+id/findParkingImageButton"
        android:layout_alignEnd="@+id/imageView2" />


</RelativeLayout>
